<div class="container col-6">
  <h1>New game</h1>
  <div class="container d-flex">
    <%@letters.each do |letter|%>
    <p class = "letter-blue"><%= letter %></p>
    <% end %>
  </div>

  <div>
    <p>What is the longest word you can find ?</p>
    <form action="score" class="d-flex" method="post" data-turbo="false">
      <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
      <%= hidden_field_tag :shuffled_letters, @letters %>
      <input type="text" class="form-control" name="answer">
      <button type="submit" class="btn btn-outline-secondary">Play</button>
    </form>
  </div>
</div>
